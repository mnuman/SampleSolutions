<process name="ValidationBPEL"
               targetNamespace="http://xmlns.oracle.com/Marqtplaats/ParticipantService/ValidationBPEL"
               xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
               xmlns:client="http://xmlns.oracle.com/Marqtplaats/ParticipantService/ValidationBPEL"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
               xmlns:ns1="http://services.qualogy.com/validationService/1.0"
               xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable">

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="validationbpel_client" partnerLinkType="ns1:ValidationBPEL" myRole="validateEmail"/>
  </partnerLinks>
  <variables>
    <variable name="startValidation"
              messageType="ns1:startValidateEmailAddressMessage"/>
    <variable name="doValidate" messageType="ns1:validateEmailAddress"/>
  </variables>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in ValidationBPEL.wsdl) -->
    <receive name="receiveInput" partnerLink="validationbpel_client" portType="ns1:validateEmail"
             operation="startValidation" variable="startValidation" createInstance="yes"/>
    <pick name="Pick1">
      <onMessage variable="doValidate" partnerLink="validationbpel_client"
                 portType="ns1:validateEmail" operation="doValidate">
        <empty name="null"/>
      </onMessage>
    </pick>
  </sequence>
</process>